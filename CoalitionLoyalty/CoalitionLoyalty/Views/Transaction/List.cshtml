<h2>Transactions</h2>
<button type="button" class="btn btn-primary btn-sm pull-right" ng-click="addPoint()">
    <span class="glyphicon glyphicon-plus"></span>Create new
</button>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            @*<th>Date Time</th>*@
            <th>Original Points</th>
            <th>Remaining Points</th>
        </tr>
    </thead>
    <tr ng-repeat="trans in transactions">
        <td>{{trans.Id}}</td>
        @*<td>{{trans.DateTime}}</td>*@
        <td>{{trans.OriginalPoints}}</td>
        <td>{{trans.RemmainingPoints}}</td>
    </tr>
</table>